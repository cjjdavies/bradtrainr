labs(title = "Differences in floral attributes of three *Iris* species",
x = "Sepal Length (cm)",
y = "Sepal Width (cm)") +
theme_bw()
ggplot(
data = iris,
mapping = aes(x = Sepal.Length,
y = Sepal.Width,
colour = Species,
shape = Species,
show.legend = FALSE)) +
geom_point(size = 4) +
